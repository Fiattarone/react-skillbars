{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/ejs",
    "target": "es5",
    "module": "commonJS",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "jsx": "react"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/**/*.test.tsx",
    "**/**/*.spec.tsx",
    "**/**/*.test.ts",
    "**/**/*.stories.ts",
    "**/**/*.stories.tsx",
    "**/**/*.stories.js",
    "**/**/*.stories.jsx",
    "**/**/storybook-components"
  ]
}
