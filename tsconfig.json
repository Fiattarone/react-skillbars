{
  "compilerOptions": {
    "outDir": "./build-module",
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "jsx": "react"
  },
  "include": [
    "./src/lib/**/*.tsx",
    "./src/lib/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./src/lib/**/*spec.tsx"
  ]
}